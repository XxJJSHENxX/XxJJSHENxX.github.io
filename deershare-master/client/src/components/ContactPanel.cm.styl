.base
  width 420px
  padding 20px 40px
  background white
  text-align center
  box-shadow 0px 2px 4px 0px rgba(197, 197, 197, 0.5)

.title
  text-align center
  margin-bottom 15px
  font-weight 700
  color #757575

.input
  width 100%
  height 38px
  margin-bottom 15px

.textarea
  width 100%
  padding 10px
  border 1px solid #a9a9a9
  appearance none
  outline none
  margin-bottom 15px
  &:focus
  &:active
    border-color #56BDC0
  &::placeholder
    color #b5b5b5

.btn
  width 100%
  margin-bottom 15px

.tips
  color #8d8d8d
  text-align left
